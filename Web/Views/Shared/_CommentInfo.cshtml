@using Services.DTOs
@model CommentDto

<a id="@Model.Id"></a>
<div class="single-comment-wrapper" id="@Model.Id-comment-wrapper">
    <div class="user-ava"><img src="@Model.UserPhoto" /></div>
    <div>
        <div class="username">@Model.UserName <span class="comment-created">@Model.Created</span></div>
        <div class="comment-text">@Model.Text</div>
        <span>
            <span class="comment-likes">@Model.Likes</span>
            <a href="#" data-bind="click: function() { setReaction('@Model.Id', '', true) }">
                <i class="far fa-thumbs-up"></i>
            </a>
            <span class="comment-dislikes">@Model.Dislikes</span>
            <a href="#" data-bind="click: function() { setReaction('@Model.Id', '', false) }">
                <i class="far fa-thumbs-down"></i>
            </a>
            <a href="#" data-bind="click: function() { displayAnswerCommentBox('@Model.Id', true) }"> <b>Ответить</b></a>
        </span>
    </div>
</div>