@{Layout = null;}

    <div id="authorizeModal" class="modal">

        <h2>Авторизация</h2>

        <p style="font-size:16px;">
            Авторизируйтесь на <b>youIT</b> с помощью популярный социальных сетей:
        </p>

        <div class="social-links-auth-wrapper">
            <div>
                <a asp-controller="Account" asp-action="SignInExternal" asp-route-externalProvider="Google" title="Google">
                    <i class="fab fa-google" style="color:#ae0303"></i>
                </a>
            </div>

            <div>
                <a asp-controller="Account" asp-action="SignInExternal" asp-route-externalProvider="Facebook" title="Facebook">
                    <i class="fab fa-facebook" style="color:#0f286d"></i>
                </a>
            </div>

            <div>
                <a asp-controller="Account" asp-action="SignInExternal" asp-route-externalProvider="VK" title="Vkontakte">
                    <i class="fab fa-vk" style="color:#203469"></i>
                </a>
            </div>
        </div>

        <p>&nbsp;</p>

    </div>