@using Web.Utils


<div style="display:grid; grid-gap:5px; grid-template-columns: 1fr 10fr;margin-bottom:40px;">
    @{string url = Helper.GetUserPhotoUrl(User); }
    <div class="user-ava"><img src="@url" /></div>
    <div>
        <form class="pure-form">
            <input id="username-hidden" type="hidden" value="@User.Identity.Name" />
            <textarea id="comment-box" class="pure-input-1" placeholder="Комментировать..."></textarea>
            <div class="comment-button" data-bind="click: addComment" style="float:left;  margin-right:15px;">
                Комментировать
            </div>
            <div style="margin-top:7px;">
                <i class="fas fa-bold"></i> &nbsp;
                <i class="fas fa-italic"></i> &nbsp;
                <i class="fas fa-underline"></i>
            </div>
        </form>
    </div>
</div>
