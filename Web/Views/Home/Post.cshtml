@model Services.DTOs.PostDto
@using Web.Utils
@using System.Text.RegularExpressions

@{
    string thumbUpClass = "noReaction";
    string thumbDownClass = "noReaction";

    if (User.Identity.IsAuthenticated)
    {
        string userId = Helper.GetUserId(User);
        if (Model.WhoLiked.Contains(userId))
        {
            thumbUpClass = "liked";
        }
        else if (Model.WhoDisliked.Contains(userId))
        {
            thumbDownClass = "disliked";
        }
    }
}

<div class="box full-post">

    <h1>@Model.Title</h1>

    @{ 
        string postUrl = "http://youit.pro/post/" + Model.Url;

        string shareVK = "https://vk.com/share.php?url=" + postUrl;
        string shareFB = "https://www.facebook.com/sharer/sharer.php?u=" + postUrl;
        string shareLI = "https://www.linkedin.com/sharing/share-offsite/?url=" + postUrl;
    }

    <div>
        <a href="@shareVK"
           class="pure-button pure-button-primary" style="font-size:14px; background-color:#4c75a3; margin-bottom:3px;">
            Поделиться ВКонтакте <i class="far fa-share-square"></i>
        </a>
        <a href="@shareFB"
           class="pure-button pure-button-primary" style="font-size:14px; background-color: #898F9C; margin-bottom:3px;">
            Поделиться в Facebook <i class="far fa-share-square"></i>
        </a> <!-- #4267B2 -->
        <a href="@shareLI"
           class="pure-button pure-button-primary" style="font-size:14px; background-color:#2867B2; margin-bottom:3px;">
            Поделиться LinkedIn <i class="far fa-share-square"></i>
        </a>

    </div>
    <div class="post-text">
        <div id="post-statistic">
            <div><i class="far fa-eye"></i> @Model.ViewsFormatted</div>
            <div><a href="#begin-comments"><i class="far fa-comment"></i> @Model.CommentsCount</a> </div>

            <div id="post-likes" class="@thumbUpClass" data-bind="click: function() { setLike('@Model.Id') }" style="cursor:pointer;">
                <i class="far fa-thumbs-up"></i> <span>@Model.Likes</span>
            </div>
            <div id="post-dislikes" class="@thumbDownClass" data-bind="click: function() { setDislike('@Model.Id') }" style="cursor:pointer;">
                <i class="far fa-thumbs-down"></i> <span>@Model.Dislikes</span>
            </div>
        </div>

        @Html.Raw(Model.Text)
    </div>
   

    @await Html.PartialAsync("_PostComments", Model)

    <p></p>
    <p><b>Вас также может заинтересовать</b></p>
    <div id="more-posts" style="display:grid; grid-template-columns: 1fr 1fr; grid-gap:20px;">
        <!-- ko foreach: morePosts -->
        <div style="margin-bottom:30px;">
            <a data-bind="attr: { href: url }">
                <img style="max-width:100%; border-radius:3px;" data-bind="attr: { src: image, alt: title }" />
                <h4 data-bind="text: title" style="margin-top:0px;"></h4>
            </a>
        </div>
        <!-- /ko -->
    </div>
</div>
<script src="~/js/full-post.js" async></script>
